<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WGUCourseTracker"
             x:Class="WGUCourseTracker.TermViewPage"
             ControlTemplate="{StaticResource Key=Template}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Course"
                     Clicked="NewCourse_Clicked"/>
        <ToolbarItem Text="Edit Course"
                     Clicked="EditCourse_Clicked"/>
        <ToolbarItem Text="Save"
                     Clicked="SaveTerm_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout x:Name="mainStackLayout" Padding="5, 20,5,5">

            <Label 
            Style="{StaticResource Header1}"
            Text= "{Binding  TermName, StringFormat= ' {0} View/Edit'}"
            FontSize="Title" 
            Padding="10,10,0,10" 
            FontAttributes="Bold"/>

            <StackLayout Orientation="Horizontal">
                <Label 
                VerticalOptions="End"
                x:Name="termNameLabel" 
                Text="Term:" 
                Padding="20,0,30,0"/>
                <Editor x:Name="termEntry"
                   Text="{Binding TermName, Mode=TwoWay}"
                VerticalOptions="End"
                Placeholder="Term Name"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label 
                VerticalOptions="End"
                x:Name="startDateLabel" 
                Text="Start Date:" 
                Padding="20,0,0,0"/>
                <DatePicker Date="{Binding TermStartDate, Mode=TwoWay}" x:Name="startDatePicker" VerticalOptions="End"></DatePicker>
            </StackLayout>

            <StackLayout Orientation="Horizontal" >
                <Label
                VerticalOptions="End"
                x:Name="endDateLabel" 
                Text="End Date:" 
                Padding="20,0,8,0"/>
                <DatePicker Date="{Binding TermEndDate, Mode=TwoWay}" x:Name="endDatePicker" VerticalOptions="End"></DatePicker>
            </StackLayout>

            <StackLayout>
                <Label Text="Courses:"/>
                <Frame  
                Style="{StaticResource bg}"
                WidthRequest="100" HeightRequest="150">
                    <StackLayout x:Name="courseStackLayout"
                                 VerticalOptions="FillAndExpand"
                                 HorizontalOptions="CenterAndExpand">
                        <ListView x:Name="courseListView"
                                  HasUnevenRows="True"
                                  SeparatorVisibility="None">
                            
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal"
                                                     HorizontalOptions="FillAndExpand"
                                                     VerticalOptions="FillAndExpand"
                                                     Padding="2">
                                            <Label Text="Dates: " HorizontalOptions="FillAndExpand">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                        <Span Text= "{Binding CourseName}"
                                                              FontAttributes="Bold"
                                                              FontSize="Small"/>
                                                        <Span Text=  "{Binding CourseStartDate,
                                                        StringFormat='{0:MMM dd, yyyy}'}"
                                                        FontSize="Small" />
                                                        <Span Text=" to "/>
                                                        <Span Text="{Binding CourseEndDate,
                                                            StringFormat='{0:MMM dd, yyyy}'}"
                                                            FontSize="Small"/>
                                                    </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </Frame>
                <Button Text="Delete"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
