<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGUCourseTracker.CourseViewPage"
             ControlTemplate="{StaticResource Key=Template}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit Instructor"
                     Clicked="AddInstructor_Clicked"/>
        <ToolbarItem Text="Edit Assessments"
                     Clicked="AddAssessment_Clicked"/>
        <ToolbarItem Text="Save"
                     Clicked="SaveCourse_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="mainStackLayout" Padding="5, 20,5,5">
                <StackLayout Orientation="Horizontal">
                    <Label 
                    Style="{StaticResource Header1}"
                    Text="Course View" 
                    FontSize="Title" 
                    Padding="5,0,0,0" 
                    FontAttributes="Bold"/>
                <Label
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    Text="{Binding TermName, StringFormat= 'Added to {0}'}"/>
                 </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <StackLayout
                        Padding="0,0,5,0"
                        Orientation="Horizontal" 
                        HorizontalOptions="FillAndExpand">
                        <Entry x:Name="courseNameEntry"
                               Text="{Binding CourseName, Mode=TwoWay}"
                            VerticalOptions="End"
                            Placeholder="Course Name"/>
                        <Picker x:Name="Status" 
                            Title="{Binding CourseStatus, Mode=TwoWay}"
                            TitleColor="Green"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="End">
                            <Picker.Items>
                                <x:String>Active</x:String>
                                <x:String>Completed</x:String>
                                <x:String>Planned</x:String>
                                <x:String>Dropped</x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>
                </StackLayout>

                <StackLayout 
                    Orientation="Horizontal"
                    Padding="0,0,0,5">
                    <StackLayout Orientation="Horizontal">
                        <Label x:Name="startDateLabel"  
                            Text="Start Date:"
                            FontSize="Small"
                            VerticalOptions="Center"
                            Padding="5,0,0,0"/>
                        <DatePicker Date="{Binding CourseStartDate, Mode=TwoWay}"
                                FontSize="Small" VerticalOptions="Center">
                        </DatePicker>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label x:Name="endDateLabel"
                            Text="Expected End Date:" 
                            FontSize="Small"
                            VerticalOptions="Center" 
                            Padding="5,0,0,0"/>
                        <DatePicker Date="{Binding CourseEndDate, Mode=TwoWay}"
                            FontSize="Small" 
                            VerticalOptions="Center"></DatePicker>
                    </StackLayout>

                </StackLayout>
                <BoxView HorizontalOptions="FillAndExpand" 
                    HeightRequest="2" 
                    Color="#11213d"/>
                <StackLayout HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <StackLayout 
                            WidthRequest="500">
                        <Label Text="Instructor Info:"
                            Style="{StaticResource Header2}"/>
                        <Frame HeightRequest="100"
                            Style="{StaticResource bg}">
                            <StackLayout  x:Name="instructorStackLayout">
                                <Label Text="{Binding InstructorName,Mode=TwoWay}"/>
                                <Label Text="{Binding InstructorPhone}"/>
                                <Label Text="{Binding InstructorEmail}"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                    <StackLayout WidthRequest="500"
                        Orientation="Vertical">
                        <Label Text="Assessments:"
                            Style="{StaticResource Header2}"/>
                        <StackLayout>
                            <Frame HeightRequest="100"
                                Style="{StaticResource bg}">
                                <StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Perf:"
                                               FontSize="Small"/>
                                        <Label Text="{Binding AssessmentName}"
                                            HorizontalOptions ="EndAndExpand"
                                            VerticalTextAlignment="Center"
                                            FontSize="Micro"/>
                                    </StackLayout >
                                    <Label Text="Due Date:"
                                        FontSize="Micro"/>
                                    <BoxView HorizontalOptions="FillAndExpand" 
                                        HeightRequest="1" 
                                        Color="#11213d"/>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Obj:"
                                            FontSize="Small"/>
                                        <Label Text="{Binding AssessmentName}"
                                            HorizontalOptions ="EndAndExpand"
                                            FontSize="Micro"/>
                                    </StackLayout>
                                    <Label Text="Due Date:"
                                        FontSize="Micro"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                <Label
                    Style="{StaticResource Header2}"
                    Text="Notes:"/>
                <Editor                    
                    HeightRequest="150"
                    BackgroundColor="LightGray"
                    FontSize="Small">

                </Editor>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>