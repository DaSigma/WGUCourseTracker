<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WGUCourseTracker"
             x:Class="WGUCourseTracker.MainPage"
             ControlTemplate="{StaticResource Key=Template}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Course"
                     Clicked="NewCourse_Clicked"/>
        <ToolbarItem Text="Edit Course"
                     Clicked="EditCourse_Clicked"/>
        <ToolbarItem Text="Save"
                     Clicked="SaveTerm_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
    <StackLayout Padding="5, 20,5,5">

        <Label 
            Style="{StaticResource Header1}"
            Text="Create Term" 
            FontSize="Title" 
            Padding="10,10,0,10" 
            FontAttributes="Bold"/>

        <StackLayout Orientation="Horizontal">
            <Label 
                VerticalOptions="End"
                x:Name="termNameLabel" 
                Text="Term:" 
                Padding="20,0,30,0"/>
            <Entry 
                VerticalOptions="End"
                Placeholder="Term Name"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label 
                VerticalOptions="End"
                x:Name="startDateLabel" 
                Text="Start Date:" 
                Padding="20,0,0,0"/>
            <DatePicker VerticalOptions="End"></DatePicker>
        </StackLayout>

        <StackLayout Orientation="Horizontal" >
            <Label
                VerticalOptions="End"
                x:Name="endDateLabel" 
                Text="End Date:" 
                Padding="20,0,8,0"/>
            <DatePicker VerticalOptions="End"></DatePicker>
        </StackLayout>
        
        <StackLayout>
            <Label Text="Courses:"/>
            <Frame  
                Style="{StaticResource bg}"
                WidthRequest="100" HeightRequest="150">
                    <StackLayout>
                        <ListView x:Name="termsListView">
                        </ListView>
                    </StackLayout>
            </Frame>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="0,5,0,0">
                    <Button Text="Delete"/>
                </StackLayout>
        </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
