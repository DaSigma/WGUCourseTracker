<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WGUCourseTracker"
             x:Class="WGUCourseTracker.App">

    <Application.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="Template">
                <StackLayout>
                    <StackLayout>
                        <Image x:Name="WGUlogo"                              
                               Source="{local:ImageResource WGUCourseTracker.Assets.Images.WGUlogo.png}"                           
                               Margin="20,20,20,0"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Start"
                               HeightRequest="25"
                               WidthRequest="200"/>
                        <Label Text="Course Tracker"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"                        
                               TextColor="#11213d"
                               FontSize="Small"/>
                    </StackLayout>
                    <ContentPresenter VerticalOptions="FillAndExpand" />
                    <Label Text="@FCE LLC. 2020"
                           HorizontalTextAlignment="End"
                           FontSize="10"
                           Background="#11213d"
                           TextColor="White"
                           VerticalOptions="End"/>
                </StackLayout>
            </ControlTemplate>
            <Style x:Key="Header1"
                   TargetType="Label" >
                <Setter Property="TextColor" 
                        Value="#11213d"/>
                <Setter Property="FontSize"
                        Value="Title"/>
            </Style>
            <Style x:Key="Header2"
                   TargetType="Label" >
                <Setter Property="TextColor" 
                        Value="#11213d"/>
            </Style>
            <Style TargetType="Frame"
                   x:Key="bg">
                <Setter Property="BackgroundColor"
                        Value="#d8e2f2"/>
                <Setter Property="BorderColor"
                        Value="Black"/>
                <Setter Property="CornerRadius"
                        Value="5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>